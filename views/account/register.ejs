<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    <form action="/account/register" method="post" id="register" >
        <div class="entry">
            <label for="firstName">First Name:</label>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
        </div>
        <div class="entry">
            <label for="lastName">Last Name:</label>
            <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
        </div>
        <div class="entry">
            <label for="email">Email:</label>
            <input type="email" name="account_email" id="accountemail" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" required value="<%= locals.account_email %>">
        </div>
        <div class="entry">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <p>Password must be at least 12 characters long and contain at least one uppercase letter, one number, and one special character.</p>
        </div>
        <button type="submit">Register</button>
    </form>
    <div class="loginmsg">
    <p>Already have an account? <a href="/account/login">Login here</a></p>
</div>

<% } else { %>
    <p>Error: Unable to render registration page.</p>
<% } %>