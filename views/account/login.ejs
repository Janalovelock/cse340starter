<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>

    <form id="login" action="/account/login" method="post">
        <div class="entry">
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required>
        </div>
        <div class="entry">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required>
        </div>
        <button type="submit">Login</button>
    </form>
<div class="loginmsg">
    <p>Don't have an account? <a href="/account/register">Register here</a></p>
</div>
<% } else { %>
    <p>Error: Unable to render login page.</p>
<% } %>