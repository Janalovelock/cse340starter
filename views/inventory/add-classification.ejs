<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>

    <form id="addClassificationForm" action="/inv/add-classification" method="post">
        <div>
            <label for="classification_name">Classification Name:</label>
            <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9]+" value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
        </div>
        <% if (typeof classification_error !== 'undefined' && classification_error !== '') { %>
            <div class="error-message"><%= classification_error %></div>
        <% } %><br>
        <span>Classification name may not contain spaces or special characters</span><br>
        <button type="submit">Add Classification</button>
    </form>
<% } %>