<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>

    <% if (errors && errors.length > 0) { %>
        <div class="errors">
            <% errors.forEach(error => { %>
                <p><%= error.msg %></p>
            <% }); %>
        </div>
    <% } %>

    <form id="addClassificationForm" action="/inv/add-classification" method="post">
        <div>
            <label for="classification_name">Classification Name:</label>
            <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9]+">
        </div>
        <span>Spaces and special characters are not allowed</span><br>
        <button type="submit">Add Classification</button>
    </form>
    <% } %>