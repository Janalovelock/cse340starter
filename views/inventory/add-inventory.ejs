<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <%- console.log(classificationDropdown) %>
    <form id="add-inventory-form" action="/inv/add-inventory" method="post">
        <!-- Input fields for vehicle details -->
        <label for="make">Make:</label>
        <input type="text" id="make" name="inv_make" required><br>
        
        <label for="model">Model:</label>
        <input type="text" id="model" name="inv_model" required><br>
        
        <label for="year">Year:</label>
        <input type="number" id="year" name="inv_year" required><br>
        
        <label for="description">Description:</label><br>
        <textarea id="description" name="inv_description" rows="4" cols="50" required></textarea><br>
        
        <label for="price">Price:</label>
        <input type="number" id="price" name="inv_price" required><br>
        
        <label for="miles">Miles:</label>
        <input type="number" id="miles" name="inv_miles" required><br>
        
        <label for="color">Color:</label>
        <input type="text" id="color" name="inv_color" required><br>
        
        <!-- Dropdown for classification -->
        <label for="classification">Classification:</label> 
        <%- classificationDropdown %><br>
        
        <label for="image">Image:</label>
        <input type="text" id="image" name="inv_image" required><br>
        
        <label for="thumbnail">Thumbnail:</label>
        <input type="text" id="thumbnail" name="inv_thumbnail" required><br>
        
        <!-- Submit button -->
        <button type="submit">Add Vehicle</button>
    </form>
<% } %>